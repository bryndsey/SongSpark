<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="@dimen/primary_control_spacing">

        <com.bryndsey.songspark.ui.songproperties.widget.SongPropertyWidget
            android:id="@+id/tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:maxWidth="@dimen/song_property_max_width"
            app:propertyName="Tempo"
            app:propertySrc="@drawable/icon_metronome" />

        <com.bryndsey.songspark.ui.songproperties.widget.SongPropertyWidget
            android:id="@+id/scale_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:maxWidth="@dimen/song_property_max_width"
            app:propertyName="Scale Pitch"
            app:propertySrc="@drawable/icon_key_signature" />

        <com.bryndsey.songspark.ui.songproperties.widget.SongPropertyWidget
            android:id="@+id/scale_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:maxWidth="@dimen/song_property_max_width"
            app:propertyName="Scale Type"
            app:propertySrc="@drawable/icon_key_signature" />

        <com.bryndsey.songspark.ui.songproperties.widget.SongPropertyWidget
            android:id="@+id/lead_instrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:maxWidth="@dimen/song_property_max_width"
            app:propertyName="Lead Instrument"
            app:propertySrc="@drawable/icon_treble_clef" />

        <com.bryndsey.songspark.ui.songproperties.widget.SongPropertyWidget
            android:id="@+id/rhythm_instrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:maxWidth="@dimen/song_property_max_width"
            app:propertyName="Rhythm Instrument"
            app:propertySrc="@drawable/icon_bass_clef" />
    </LinearLayout>
</ScrollView>